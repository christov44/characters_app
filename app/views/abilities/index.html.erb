<h1> These are the Abilities </h1>

<%= link_to "Create a new Ability", new_ability_path %>
<br />
<br />

<table>
  <tr>
    <th> Ability Name </th>
  </tr>
  <br />
  <% @abilities.each do |ability| %>
  <tr>
    <td> <%= link_to(ability.name, ability_path(ability)) %> </td>
    <td> || <%= link_to "edit", edit_ability_path(ability) %> || </td>
    <td> <%= link_to "delete", ability_path(ability), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></td>
  </tr>
  <% end %>

</table>