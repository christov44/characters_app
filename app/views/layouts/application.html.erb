<!DOCTYPE html>
<html>
  <head>
    <title>CharactersApp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav><a href="#">Marvel</a> <a href="#">DC</a></nav>

    <% flash.each do |name, msg| %> <!-- |key name, thing to display | -->
      <div class=" <%= name %>">
        <%= msg %>
      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
